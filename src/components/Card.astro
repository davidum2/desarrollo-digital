---
interface Props {
	title: string;
	body: string;
	
}

const {title, body } = Astro.props;
---


<div class="h-full  p-6 mb-4 bg-light-accent1 dark:bg-dark-accent1  border border-gray-200 shadow-black dark:shadow-white rounded-lg shadow-sm  dark:border-gray-700 ">
   <div class="flex justify-center items-center">
	   <slot/>
   </div>
    <div>
        <h5 class="mb-2 text-center text-2xl font-semibold tracking-tight text-gray-900 dark:text-white">{title}</h5>
    </div>
    <p class="mb-3 font-normal ">
	{body}
	</p>
    
</div>
