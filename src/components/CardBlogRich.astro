---
import { Image } from "astro:assets";
import { type CollectionEntry } from "astro:content";

type Props = CollectionEntry<"blogPostRich">['data'] & {slug: string};

const {image, description, title, categories, slug} = Astro.props

---



<div transition:name={title}  class="relative max-w-md flex flex-col bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
  <a href={`/blog/${slug}`}>
    <Image src={image.url} alt={image.alt} class="rounded-t-lg" height={520} width={1020}/>
  </a>
  <div class="p-5">
      <a href={`/blog/${slug}`}>
          <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white"> {title}</h5>
      </a>
      <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">{description}</p>
      <a href={`/blog/${slug}`} class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
         Leer mas
           <svg class="rtl:rotate-180 w-3.5 h-3.5 ms-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
              <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
          </svg>
      </a>
      
    </div>
    <div class="flex justify-start items-start p-2  mt-auto">
      {categories.map(category =>(
      <a href={`/blog/category/${category.toLowerCase()}`}  class="bg-blue-100 hover:bg-blue-200 text-blue-800 text-xs font-semibold me-2 px-2.5 py-0.5 rounded dark:bg-gray-700 dark:text-blue-400 border border-blue-400 inline-flex items-center justify-center">{category}</a>
      ))}
    </div>
</div>

