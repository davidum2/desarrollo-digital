---
import { getAllCategoriesFilter } from "../utils/getAllCategories";

const categories = await getAllCategoriesFilter()


---


<div class="flex flex-col  justify-start items-start gap-2 my-4">
    <h3 class="text-center font-lato w-full">Te puede interesar alguna de nuestras categorias.</h3>
    {categories.map(category =>(
        <a href={`/blog/category/${category.toLowerCase()}`} class="text-light-primary dark:text-dark-primary text-xs font-semibold me-2 px-2.5 py-0.5 rounded bg-light-secondary dark:bg-dark-secondary hover:bg-light-accent1 dark:hover:bg-dark-accent2 w-full inline-flex items-center justify-center">
            {category}
            </a>
    ))}
   
  </div>