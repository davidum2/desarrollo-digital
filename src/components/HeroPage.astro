---
interface Props {
	title: string;
	    urlImg:string;
	
}
const {title, urlImg } = Astro.props;
---

    <div class="absolute inset-0 h-64 opacity-50"
    style=`background-image: url(${urlImg});
           background-size: cover;
           background-position: top;`
        ></div>
    <div class="absolute inset-0 bg-black/10 w-full h-64 ">
    </div>   
    <div class="relative flex justify-center ml-84 h-64 z-10">
        <h1 class="text-4xl md:text-6xl font-bold leading-tight mb-4">{title}</h1> 
    </div>
