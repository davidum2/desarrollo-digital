---
import Image from 'astro/components/Image.astro';

interface Props {
	title: string;
    img:string;
	altS?: string;
    
}

const {title,  img, altS} = Astro.props;
---

<div>
    <h2 class="w-full font-libre  mb-8 text-4xl">
        {title}
    </h2>
    <div class="relative flex w-full flex-col-reverse md:flex-row justify-start items-start">
        <div class="md:w-3/5 pr-8">
            <slot/>
        </div>
        <div class="md:w-2/5 h-full md:absolute top-0 right-0 mb-16">
            <img class='sticky top-11 rounded-lg shadow-black dark:shadow-white shadow-lg'  alt={altS} src={img} />
        </div>
    </div>
</div>